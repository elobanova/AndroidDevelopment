<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/actBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginBottom="30dp"
        android:text="@string/formLabel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginlabel"
        android:text="@string/lgLabel"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginvalue"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/loginlabel"
        android:layout_alignBaseline="@+id/loginlabel"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnLabel"
        android:layout_below="@+id/loginlabel"
        android:id="@+id/registerButton"/>

</RelativeLayout>
